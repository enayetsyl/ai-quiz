{
  "name": "@quiz-tuition/api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "concurrently --names \"SERVER,RASTERIZE,LLM\" --prefix-colors \"blue,green,yellow\" \"ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/server.ts\" \"npm:dev:rasterize\" \"npm:dev:llm\"",
    "dev:rasterize": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/jobs/rasterize.worker.ts",
    "dev:llm": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/jobs/llm.worker.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "concurrently \"node dist/server.js\" \"npm:start:rasterize\" \"npm:start:llm\"",
    "start:rasterize": "node dist/jobs/rasterize.worker.js",
    "start:llm": "node dist/jobs/llm.worker.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "prisma:generate": "prisma generate",
    "seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force && prisma generate && node prisma/seed.js",
    "test": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.431.0",
    "@aws-sdk/s3-request-presigner": "^3.431.0",
    "@google/genai": "^1.0.0",
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.61.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "pino": "^8.0.0",
    "pino-pretty": "^9.0.0",
    "prisma": "^6.18.0",
    "sharp": "^0.34.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^7.0.3",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.3.0"
  }
}
