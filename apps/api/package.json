{
	"name": "@quiz-tuition/api",
	"version": "0.1.0",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/index.ts",
		"build": "tsc -p tsconfig.build.json",
		"start": "node dist/index.js",
		"lint": "eslint 'src/**/*.{ts,tsx}' --fix",
		"format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
		"migrate:dev": "prisma migrate dev",
		"migrate:deploy": "prisma migrate deploy",
		"prisma:generate": "prisma generate",
		"seed": "node dist/prisma/seed.js",
		"test": "vitest"
	},
	"dependencies": {
		"aws-sdk": "^2.1370.0",
		"bullmq": "^5.61.2",
		"dotenv": "^16.0.0",
		"express": "^4.18.2",
		"helmet": "^8.1.0",
		"ioredis": "^5.8.2",
		"morgan": "^1.10.1",
		"pino": "^8.0.0",
		"pino-http": "^11.0.0",
		"pino-pretty": "^9.0.0",
		"prisma": "^5.2.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.3.1",
		"esbuild": "^0.19.2",
		"eslint": "^8.40.0",
		"prettier": "^2.8.8",
		"prisma": "^5.2.0",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.6.0",
		"vitest": "^1.3.0"
	}
}
